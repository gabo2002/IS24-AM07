<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="container" alignment="CENTER" prefHeight="653.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #30323D;" styleClass="container" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.am07.client.gui.viewController.UsernameViewController">
    <Label fx:id="welcomeText" text="Codex Naturalis" textFill="WHITE">
        <font>
            <Font name="Segoe UI Bold" size="40.0" />
        </font>
    </Label>
    <Region prefHeight="20.0" />
    <GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
        <Label styleClass="username" text="Username:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <font>
                <Font name="Segoe UI" size="15.0" />
            </font>
        </Label>
        <TextField fx:id="nicknameField" prefHeight="40.0" prefWidth="300.0" promptText="Username" style="-fx-background-radius: 12; -fx-background-color: #454754;" styleClass="nicknameField" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <font>
                <Font name="Segoe UI Bold" size="15.0" />
            </font>
        </TextField>
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
    </GridPane>
   <VBox alignment="TOP_CENTER" prefHeight="114.0" prefWidth="800.0">
      <children>
         <Label alignment="CENTER" text="Seleziona un colore" textFill="WHITE">
            <font>
               <Font size="18.0" />
            </font>
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin>
         </Label>
         <ListView fx:id="pawn_list" orientation="HORIZONTAL"  maxWidth="400.0" prefHeight="200.0" style="-fx-background-color: transparent;" />
      </children>
   </VBox>
    <Button fx:id="playButton" mnemonicParsing="false" onAction="#onPlayBtnClick" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #4CAF50; -fx-background-radius: 14; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: 700;" styleClass="play-button" text="Gioca">
        <font>
            <Font name="Segoe UI" size="12.0" />
        </font>
    </Button>

</VBox>
