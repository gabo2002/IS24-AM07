<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="1024" prefWidth="1200" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="it.polimi.ingsw.am07.client.gui.viewController.PlayerViewController">
    <!-- Metà destra dello schermo: GridPane scrollabile -->
    <right>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <content>
                <GridPane fx:id="gridPane" hgap="10" vgap="10" />
            </content>
        </ScrollPane>
    </right>

    <!-- Metà sinistra dello schermo: VBox con varie sezioni -->
    <left>
        <VBox spacing="10">
            <!-- Sezione lista giocatori -->
            <TitledPane text="Players">
                <content>
                    <ListView fx:id="playerList" />
                </content>
            </TitledPane>

            <!-- Sezione punteggio -->
            <TitledPane text="My Score">
                <content>
                    <Label fx:id="scoreLabel" />
                </content>
            </TitledPane>

            <!-- Sezione chat -->
            <TitledPane text="Chat">
                <content>
                    <VBox spacing="10">
                        <TextArea fx:id="chatArea" editable="false" prefHeight="100" />
                        <HBox spacing="10">
                            <TextField fx:id="chatInput" HBox.hgrow="ALWAYS" />
                            <Button fx:id="sendButton" text="Send" onAction="#sendChatMessage" />
                        </HBox>
                    </VBox>
                </content>
            </TitledPane>


                <TitledPane text="Resource Deck">
                    <content>
                        <HBox spacing="10" fx:id="resourceDeckContainer" />
                    </content>
                </TitledPane>
                <TitledPane text="Gold Deck">
                    <content>
                        <HBox spacing="10" fx:id="goldDeckContainer" />
                    </content>
                </TitledPane>


            <TitledPane text="My Hand">
                <content>
                    <VBox fx:id="cardContainer" prefHeight="200.0" prefWidth="100.0">
                    </VBox>
                </content>
            </TitledPane>
        </VBox>
    </left>
</BorderPane>
